
@{
    ViewData["Title"] = "ChangePassword";
}

<h2>ChangePassword</h2>
<div class="alert-success">
    @TempData["updated"]

</div>
<div class="alert-danger "  id="vsSummary"  asp-validation-summary="All"></div>

<div class="container">
    <form asp-action="ChangePassword"  id="ChangePasswordForm" class="col-lg-4" method="post">

        <div class="form-group">
            <input  required class="form-control" type="password" placeholder="Current password" name="OldPassword" />
        </div>
        <div class="form-group" >
            <input required pass class="form-control" type="password" placeholder="new password" name="NewPassword" />
        </div>  
        <div class="form-group">
            <input required passconfirm class="form-control" type="password" placeholder="confirm password" name="confirmPassword" />
        </div>
        <div class="form-group">
            <input  class="btn btn-danger" type="button" onclick="validate()" value="change" />

        </div>

      
    </form>
</div>


