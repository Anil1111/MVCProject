@model WebApplication2.Models.ApplicationRole

<h4>Application Role</h4>
<hr />
<div class="row ">
    <div class="col-md-6 text-center" >
        <form asp-action="Create" data-ajax="true" data-ajax-method="Post" data-ajax-update="#MyGetAll" data-ajax-mode="replace">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-lg-12 col-lg-offset-6" >
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12 col-lg-offset-6">
                <label asp-for="Description" class="control-label"></label>
                <textarea  asp-for="Description" class="form-control" rows="5" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group col-lg-12 col-lg-offset-6">
                <input type="submit" value="Create" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

